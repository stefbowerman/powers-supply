<div class="page-footer">
  {% if section.settings.link_list != blank %}
  <div class="nav footer-nav">
    <ul>
      {% for link in linklists[section.settings.link_list].links %}
      <li>{{ link.title | link_to: link.url }}</li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
  
  {% include 'social-links' %}

  <p class="copyright" role="contentinfo">
    <span class="shop">&copy; {{ "now" | date: "%Y" }} {{ shop.name | link_to: '/'  }}.</span>
    {{ 'layout.footer.theme_by_html' | t }}
    {{ powered_by_link }}
  </p>

  <ul class="payment-methods">
    {% for type in shop.enabled_payment_types %}
    <li><img src="{{ type | payment_type_img_url }}" alt="{{ type | escape }}" /></li>
    {% endfor %}
  </ul>
</div>


{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "link_list",
        "label": "Menu",
		"default": "footer"
      }
	]
  }
{% endschema %}
